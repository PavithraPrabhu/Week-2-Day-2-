package JavaCodeDay3;

public class LearnStrings {

	public static void main(String[] args) {
		String strObj = "Welcome to Testleaf";
		String strObj1 = "hello";

		int length = strObj.length();
		System.out.println("Length of String is:" + length);

		System.out.println("Char on given index: " + strObj.charAt(8));

		int indexOf = strObj.indexOf("c");
		System.out.println("Index of:" + indexOf);

		int lastindexOf = strObj.lastIndexOf("Welcome to Testleaf");
		System.out.println("Last Index of:" + lastindexOf);

		char[] charArray = strObj.toCharArray();
		for (int i = 0; i < charArray.length; i++)
			System.out.println(charArray[i]);

		String upperCase = strObj1.toUpperCase();
		System.out.println(upperCase);

		String lowerCase = strObj.toLowerCase();
		System.out.println(lowerCase);

		String upperCase1 = strObj.toUpperCase();
		System.out.println(upperCase1);

		char charlowerCase = Character.toLowerCase('H');
		System.out.println(charlowerCase);
		
		boolean compare = strObj1.equals(strObj1);
        System.out.println(compare);
	}

}
