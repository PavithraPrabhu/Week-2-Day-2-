package JavaCodeDay1;

public class AssignmentNegativetoPositive {

	public static void main(String[] args) {
	int num= -40;
	if (num <0) {
		int num1 = num*(-1);
		
		System.out.println("The number" +num+ "is converted to" +num1);
				
	}
	else 
		System.out.println("The number is already a Positive Number");
		

	}

}
